<main>
  <h2 class="title"> Account Profile(<%= "#{current_user.first_name} #{current_user.last_name}" %>)</h2>
  <div id="<%= dom_id @user %>">
    <div class="user-details"> 
      <% if @user.image.present? %>
        <%= image_tag(@user.image.url(:medium), class: "image") %>                                         
      <% else %>
        <%= image_tag("user-preview.png", class: "image") %>                                         
      <% end %>
      <div class="sub-details" style="margin-left: 30px">
        <b>First Name: </b><%= @user.first_name %>
      <br/>
        <b>Last Name: </b><%= @user.last_name %>
    <br/>
        <b>Email: </b><%= @user.email %>
<br/>
      </div>
      <%= link_to("Edit Account", edit_user_registration_path, class: "btn-square-less-space") %>
    </div>

    <hr/>
  </div>
    <%= link_to("Back", :back) %>
</main>
