<%= form_with(model: [@product, Sku.new]) do |form| %>
  <div>
    <%= form.label :sku, style: "display: block" %>
    <%= form.text_field :sku %>
  </div>
  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>
  <div>
    <%= form.label :quantity_in_stock, style: "display: block" %>
    <%= form.text_field :quantity_in_stock %>
  </div>
  <div>
    <%= form.label :feature, style: "display: block" %>
    <%= form.text_field :feature %>
  </div>

  <div>
    <%= form.submit "Add SKU" %>
  </div>
<% end %>
